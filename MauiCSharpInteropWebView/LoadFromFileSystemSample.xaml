<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:hwv="clr-namespace:HybridWebView;assembly=HybridWebView"
             x:Class="MauiCSharpInteropWebView.LoadFromFileSystemSample"
             Title="LoadFromFileSystemSample">
    <Grid>
        <hwv:HybridWebView x:Name="myHybridWebView" 
                           HybridAssetRoot="hybrid_root" 
                           MainFile="proxy?operation=loadFromFileSystem&amp;fileName=SampleFileSystemPage.html" 
                           RawMessageReceived="OnHybridWebViewRawMessageReceived"/>
    </Grid>
</ContentPage>